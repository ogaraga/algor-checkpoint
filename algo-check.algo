ALGORITHM algo-check
VAR
    $Sentence:= "I am a gomycode graduate with a pass record.": STRING;
    $Characters:= n($Sentence): CHAR;
    $Words:= n($Characters): STRING;
    $Vowels:= "'a','e','i','o','u'": CHAR;

BEGIN
    /*To read in total number of words, 
    characters and vowels
    in a sentence*/
    Read($sentence);
    Read($Characters);
    Read($Words);
    Read($Vowels);
    Write($Sentence, $Characters, $Words, $Vowels);
END